version: '3.8'

services:
  # Backend Spring Boot API
  backend:
    image: xuaustin/finance-backend:latest
    container_name: finance-backend
    restart: unless-stopped
    environment:
      # Database connection (hardcoded for remote deployment)
      DB_HOST: your-db-host
      DB_PORT: 3306
      DB_NAME: finance
      DB_USER: your-db-user
      DB_PASSWORD: your-db-password
      # JWT configuration
      JWT_SECRET: change-this-to-a-secure-random-string-at-least-256-bits
      JWT_EXPIRATION: 86400000
      # Spring Boot settings
      SPRING_JPA_HIBERNATE_DDL_AUTO: none
      SPRING_FLYWAY_ENABLED: true
      JAVA_OPTS: -Xms512m -Xmx1024m
    ports:
      - "8080:8080"
    networks:
      - finance-network
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8080/api/actuator/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

  # Frontend Vue.js + Nginx
  frontend:
    image: xuaustin/finance-frontend:latest
    container_name: finance-frontend
    restart: unless-stopped
    depends_on:
      - backend
    ports:
      - "3000:80"
    networks:
      - finance-network
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost/"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  finance-network:
    driver: bridge
